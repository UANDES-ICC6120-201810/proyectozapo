<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />


<div class="container">
  <div class="row vertical-offset-100">
    <div class="col-md-4 col-md-offset-4">
      <%= form_with(model: bus_stop_congestion, local: true) do |form| %>
        <% if bus_stop_congestion.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(bus_stop_congestion.errors.count, "error") %> prohibited this bus_stop_congestion from being saved:</h2>

            <ul>
            <% bus_stop_congestion.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :bus_stop_id %>
          <%= form.text_field :bus_stop_id, :class => 'form-control' %>
        </div>

        <div class="input-group date" id="datetimepicker2" data-target-input="nearest">
          <%= form.label :event_time %>
          <%= form.text_field :event_time, 'data-target': '#datetimepicker2',:class => 'form-control datetimepicker-input'%>
          <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>

        <div class="field">
          <%= form.label :amount_of_people %>
          <%= form.text_field :amount_of_people, :class => 'form-control' %>
        </div>

        <div class="actions">
          <%= form.submit :class => "btn btn-lg btn-info btn-block"%>
        </div>
      <% end %>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker2').datetimepicker({
                locale:'ru'
            });
        });
    </script>
  </div>
</div>
