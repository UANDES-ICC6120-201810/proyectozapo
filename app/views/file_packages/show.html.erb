<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @file_package.name %>
</p>

<p>
  <strong>Files:</strong>
  <% @file_to_update.each do |file_update| %>
  <div class="col">
    <div class="checkbox">
      <% if @final_check.include? file_update.id %>
        <label><input type="checkbox" checked><%= file_update.name %></label>
      <% else %>
        <label><input type="checkbox"><%= file_update.name %></label>
      <% end %>
    </div>
  </div>
  <% end %>
</p>


<%= link_to 'Edit', edit_file_package_path(@file_package) %> |
<%= link_to 'Back', file_packages_path %>


