<p id="notice"><%= notice %></p>

<h1>Bus Stops</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Stop lat</th>
      <th>Stop lon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bus_stops.each do |bus_stop| %>
      <tr>
        <td><%= bus_stop.code %></td>
        <td><%= bus_stop.name %></td>
        <td><%= bus_stop.stop_lat %></td>
        <td><%= bus_stop.stop_lon %></td>
        <td><%= link_to 'Show', bus_stop %></td>
        <td><%= link_to 'Edit', edit_bus_stop_path(bus_stop) %></td>
        <td><%= link_to 'Destroy', bus_stop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bus Stop', new_bus_stop_path %>
