<p id="notice"><%= notice %></p>


<h1>Access Points</h1>
<div class="table-responsive">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Bus Stop</th>
        <th>Last Connection</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @access_points.each do |access_point| %>
        <tr>
          <td><%= access_point.bus_stop.code %></td>
          <td><%= access_point.last_connection %></td>
          <td><%= link_to 'Show', access_point %></td>
          <td><%= link_to 'Edit', edit_access_point_path(access_point) %></td>
          <td><%= link_to 'Destroy', access_point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Access Point', new_access_point_path %>
